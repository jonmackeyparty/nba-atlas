<%= form_for((@league.new_record? ? [@player, @league] : @league)) do |f| %>
    <%= f.hidden_field :admin_id %>
    <label>League Name: </label>
    <%= f.text_field :name %>
    <label>League Type: </label>
    <%= f.text_field :league_type %>
    <label>League Schedule: </label>
    <%= f.text_field :schedule %><br>
    <%= f.submit %>
    <%= f.submit "Cancel" %>
<% end %>
