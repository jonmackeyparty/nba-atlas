<% if @player.invitations.pending.any? %>
  <% @player.invitations.pending.each do |i| %>
  Invitation Recieved from <%= i.league_name %> on <%= i.created_date %>, courtesy of <%= i.admin_name %>.
    <%= form_for i do |f| %>
      <%= f.check_box :accepted %>
      <%= f.submit 'Accept Invitation'%>
    <% end %>
  <% end %>
<% else %>
  <p>No pending invitations</p>
<% end %>
